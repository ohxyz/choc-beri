//- feature-status-lab
//- TODO: Display a message when there is no features or feature stores are found
extends _layout.pug

mixin renderListItem(f)
    .feature-status__list-item
        - item = Object.values(f.features)[0]
        - attributes = { 'data-feature': f }
        span.feature-status__feature-name&attributes(attributes) #{item.featureName} #{item.dataType}

block link
    - var path = 'feature-status-lab'

